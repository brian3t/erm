<%
%>
<div class="col-sm-2 col-xs-12">
	<button type="button" class="btn btn-sm btn-primary create_item create"><span class="glyphicon glyphicon-plus"></span> Add Marketing Plan
	</button>
	<div class="clearfix"></div>
	<br>
	<!--<input type="search" id="marketing_search" class="col-xs-12" name="marketing_search" placeholder="Filter marketings">-->
	<input type="search" id="marketing_search" class="col-xs-12" name="marketing_search" placeholder="NOT IMPLEMENTED YET">
	<div id="marketing_search_list" class="col-xs-12 padded search_list">

	</div>
</div>
<div class="col-sm-10 col-xs-12 form_wrapper">
	<div class="action_buttons edit_switch_wrapper col-xs-3 col-xs-offset-9">
		<label><input class="edit_switch" type="checkbox">&nbsp;Edit <span class="toggle_state">Off</span></label>
	</div>
	<hr>
	<div id="marketing_form_wrapper" class="col-xs-12 edit_form_wrapper">
	</div>
	<div id="create_marketing" class="in_edit_mode" style="display: none">
		<form class="account_info create" action="#" data-model="marketing" data-toggle="validator" data-disable=true role="form">
			<input type="hidden" name="user_id" value="<%= app.cur_user.get('id') %>">

			<div class="form-group">
				<div class="row">
					<label class="col-xs-6">Event ID<input name="offer_id" type="text" required class="form-control">
						<div class="help-block with-errors"></div>
					</label>
				</div>
			</div>


			<div class="action_buttons">
				<button type="submit" class="btn btn-primary save" style="display: none"><span
							class="glyphicon glyphicon-floppy-save"
					></span> Save
				</button>
				<button type="button" class="btn btn-default reset" style="display: none"><span
							class="glyphicon glyphicon-repeat"
					></span> Reset Form
				</button>
				<button type="button" class="btn btn-default toggle_create_mode cancel" style="display: none">Cancel</button>
			</div>
		</form>

	</div>
</div>